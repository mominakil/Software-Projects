@model PolyGames.Models.Games

@{
    ViewBag.Title = "GamesByYear";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="~/Content/Site.css" rel="stylesheet" />

<h2>Games Created in @Model.Items[0].Year</h2>

@using (Html.BeginForm("GamesByYear", "Home", FormMethod.Post))
{
    var i = 0;
<table>
    @for (i = 0; i < Model.Items.Count(); i++)
    {

        <tr>
            <td><img src="@Url.Content(@Model.Items[i].pictureFilePathOne)" alt="" class="gameImage" height=100 width=100></td>
            <td style="border:medium">

                <div id="mydiv">
                    &nbsp; @Html.ActionLink(Model.Items[i].GameName, "Game", new { Id = Model.Items[i].Id })
                </div>
                &nbsp; @Html.DisplayFor(m => m.Items[i].Description)&nbsp;&nbsp;

            </td>
        </tr>
        <tr><td>&nbsp;</td><td>&nbsp;</td><td>&nbsp;</td></tr> //This is an empty row to create a space in between each game
    }
</table>
}


