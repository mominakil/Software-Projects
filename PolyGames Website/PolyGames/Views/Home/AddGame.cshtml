@model PolyGames.Models.Game

@{
    ViewBag.Title = "Add a Game";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="~/Content/Site.css" rel="stylesheet" />

<h2>Add a Game</h2>

@using (Html.BeginForm("AddGame", "Home", FormMethod.Post, new { encType = "multipart/form-data" }))
{
    <div class="form-horizontal">
        @Html.HiddenFor(model => model.GroupId)
        <div class="form-group">
            @Html.LabelFor(model => model.GameName, "Game Title*", htmlAttributes: new { @class = "control-label col-md-2 white-label" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.GameName, new { htmlAttributes = new { @class = "form-control", required = "required" } })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Description, "Description*", htmlAttributes: new { @class = "control-label col-md-2 white-label" })
            <div class="col-md-10">

                @Html.TextAreaFor(model => model.Description, new { @rows = 4, @cols = 10, @class = "form-control", required = "required"  })                
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Year, "Year*", htmlAttributes: new { @class = "control-label col-md-2 white-label" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Year, new { htmlAttributes = new { @class = "form-control", required = "required" } })
            </div>
        </div>
        
        <div class="form-group">
            @Html.LabelFor(model => model.picturesUpload, "Pictures*", htmlAttributes: new { @class = "control-label col-md-2 white-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.picturesUpload, new { @type = "file", @class = "input-file", multiple = "true", required = "required", accept="image/*" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.videoUpload, "Video*", htmlAttributes: new { @class = "control-label col-md-2 white-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.videoUpload, new { @type = "file", @class = "input-file", required = "required", accept="video/*" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.executableUpload, "Executable File*", htmlAttributes: new { @class = "control-label col-md-2 white-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.executableUpload, new { type = "file", @class = "input-file", required = "required", accept=".exe" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" name="Save" class="btn btn-default" />
                &nbsp; &nbsp; @ViewBag.Message
            </div>
        </div>
    </div>
        
 }
